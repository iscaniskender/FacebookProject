                <div class="icon">

                    <img src="~/facebook-clone-master/img/icons/plus.svg" />
                </div>

                <div class="icon has-notification">

                    <img src="~/facebook-clone-master/img/icons/messenger.svg" />
                </div>

                <div class="icon">
                    <a href="/Profil/DisplayRequestFriend" style="text-decoration:none">
                        <img src="~/facebook-clone-master/img/icons/bell.svg" />
                    </a>
                    <span id="notification">@ViewBag.Count</span>
                </div>
              
                <div class="icon">
                    <a href="/Account/Logout">
                        <img src="~/facebook-clone-master/img/icons/arrow.svg" />
                    </a>
                </div>
            </div>
        </div>
    </nav>


