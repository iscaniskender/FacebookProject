                </div>
            </div>

            <div class="tab-icon">
                <div class="icon">
                    <img src="~/facebook-clone-master/img/icons/users.svg" />
                </div>
            </div>


            <div class="tab-icon">
                <div class="icon has-notification">

                    <img src="~/facebook-clone-master/img/icons/calendar.svg" />
                </div>
            </div>
        </div>

        <!--right side-->
        <div class="right-side">
            <div class="user">
                <div class="profile">
                   <img src="~/image/@Model.User.ProfilPhoto"/>
                </div>
                //<h4>@Model.User.FullName</h4>*
            </div>

            <!--icons-->
